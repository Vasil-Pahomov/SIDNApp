<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lvr.sidnapp.MainActivity"
    android:orientation="vertical">

    <Button
        android:text="@string/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRec"
        android:onClick="buttonRecClick" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStatus" />

    <com.newventuresoftware.waveform.WaveformView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/waveViewSource"
        app:mode="RECORDING"
        android:layout_weight="0.3"
        app:waveformStrokeThickness="3"
        app:waveformColor="#000000"
        app:waveformFillColor="#000000"
        app:historySize="0"
        android:background="#ffffff"
        android:onClick="testcomp_click"/>


    <com.newventuresoftware.waveform.WaveformView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/waveView1"
        app:mode="RECORDING"
        android:layout_weight="0.3"
        app:waveformStrokeThickness="3"
        app:waveformColor="#000000"
        app:waveformFillColor="#000000"
        app:historySize="0"
        android:background="#ffffff" />

    <com.newventuresoftware.waveform.WaveformView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/waveView2"
        app:mode="RECORDING"
        android:layout_weight="0.3"
        app:waveformStrokeThickness="3"
        app:waveformColor="#000000"
        app:waveformFillColor="#000000"
        app:historySize="0"
        android:background="#ffffff" />

</LinearLayout>
